<resources>
    <declare-styleable name="KernelControl">
        <attr name="buttonStyle" format="reference" />
        <attr name="backgroundColor" format="color|reference" />
        <attr name="cardBackgroundColor" format="color|reference" />
        <attr name="navDrawerChildBackground" format="color|reference" />
        <attr name="navDrawerGroupBackground" format="color|reference" />
        <attr name="navDrawerMenuItemTextAppearance" format="reference" />
        <attr name="navDrawerExpandIcon" format="reference" />
        <attr name="settings_ThemeHeaderIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="LineChartView">
        <attr name="drawGrid" format="reference|boolean" />
        <attr name="drawBorder" format="reference|boolean" />
        <attr name="gridLineColor" format="reference|color" />
        <attr name="gridOutlineColor" format="reference|color" />
        <attr name="lineWidth" format="reference|dimension" />
        <attr name="gridStepX" format="reference|float" />
        <attr name="gridStepY" format="reference|float" />
        <attr name="gridLineWidth" format="reference|dimension" />
        <attr name="textSize" format="reference|dimension" />
        <attr name="labelColor" format="reference|color" />
        <attr name="labelMeasureDescription" format="reference|string" />
        <attr name="labelMax" format="reference|string" />
        <attr name="labelMin" format="reference|string" />
        <attr name="labelMaxTime" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="CardsGrid">
        <attr name="numColumns" format="integer">
            <enum name="auto_fit" value="-1" />
        </attr>
        <attr name="horizontalSpacing" format="dimension" />
        <attr name="verticalSpacing" format="dimension" />
        <attr name="stretchMode">
            <!-- Stretching is disabled. -->
            <enum name="none" value="0" />
            <!-- The spacing between each column is stretched. -->
            <enum name="spacingWidth" value="1" />
            <!-- Each column is stretched equally. -->
            <enum name="columnWidth" value="2" />
            <!-- The spacing between each column is uniformly stretched.. -->
            <enum name="spacingWidthUniform" value="3" />
        </attr>
        <attr name="columnWidth" format="dimension" />
    </declare-styleable>

</resources>