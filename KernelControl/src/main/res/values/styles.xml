<resources>
    <!-- Nav Drawer customization -->
    <style name="KC.Light.NavDrawer" parent="android:Widget.Holo.Light.ListView">
        <item name="android:background">@color/card_background_lightTheme</item>
    </style>

    <style name="KC.Dark.NavDrawer" parent="android:Widget.Holo.Light.ListView">
        <item name="android:background">@color/card_background_darkTheme</item>
    </style>

    <style name="KC.Light.NavDrawer.MenuItem">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/menu_item_text_size</item>
        <item name="android:textColor">@color/icon_color_light</item>
    </style>

    <style name="KC.Dark.NavDrawer.MenuItem" parent="KC.Light.NavDrawer.MenuItem">
        <item name="android:textColor">@color/icon_color_dark</item>
    </style>

    <!-- Action Bar Customization-->
    <style name="KC.ActionBar.Widget"></style>
    <style name="KC.ActionBar.Widget.Light.DropDownItem"></style>
    <style name="KC.ActionBar.Widget.Dark.DropDownItem"></style>

    <style name="KC.ActionBar" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:icon">@drawable/ic_actionbar_icon</item>
        <item name="android:titleTextStyle">@style/KC.ActionBar.TextAppearance.Title</item>
        <item name="android:background">?attr/accentColor</item>
    </style>

    <!-- The Action Bar DropDown Customization-->
    <style name="KC.ActionBar.Widget.Light" parent="KC">
        <item name="android:spinnerDropDownItemStyle">
            @style/KC.ActionBar.Widget.Light.DropDownItem.Spinner
        </item>
    </style>

    <style name="KC.ActionBar.Widget.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">
            @style/KC.Light.TextAppearance.Widget.ActionBar.Spinner.DropDownItem
        </item>
    </style>

    <style name="KC.ActionBar.Widget.Dark" parent="KC">
        <item name="android:spinnerDropDownItemStyle">
            @style/KC.ActionBar.Widget.Dark.DropDownItem.Spinner
        </item>
    </style>

    <style name="KC.ActionBar.Widget.Dark.DropDownItem.Spinner">
        <item name="android:textAppearance">
            @style/KC.Dark.TextAppearance.Widget.ActionBar.Spinner.DropDownItem
        </item>
    </style>

    <!-- TextAppearance -->
    <style name="KC.TextAppearance"></style>

    <style name="KC.TextAppearance.Widget"></style>

    <style name="KC.TextAppearance.Widget.ActionBar"></style>

    <style name="KC.TextAppearance.Widget.ActionBar.Spinner"></style>

    <style name="KC.ActionBar.TextAppearance.Title" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>

    <style name="KC.TextAppearance.Widget.ActionBar.Spinner.Title">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">@dimen/action_bar_spinner_title_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="KC.TextAppearance.Widget.ActionBar.Spinner.SubTitle">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">@dimen/action_bar_spinner_subtitle_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Generic attributes -->
    <style name="KC.TextAppearance.Widget.ActionBar.Spinner.DropDownItem" parent="TextAppearance.HoloAccent.Widget.DropDownItem"></style>

    <!-- specific -->
    <style name="KC.Light.TextAppearance.Widget.ActionBar.Spinner.DropDownItem" parent="KC.TextAppearance.Widget.ActionBar.Spinner.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="KC.Dark.TextAppearance.Widget.ActionBar.Spinner.DropDownItem" parent="KC.TextAppearance.Widget.ActionBar.Spinner.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <!-- Genereal text styles-->
    <style name="KC.TextAppearance.Accent">
        <item name="android:textColor">?attr/accentColor</item>
    </style>

    <style name="KC.TextAppearance.Accent.Regular" parent="KC.TextAppearance.Accent">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="KC.TextAppearance.Accent.Light" parent="KC.TextAppearance.Accent">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="KC.TextAppearance.Accent.Regular.SmallText" parent="KC.TextAppearance.Accent.Regular">
        <item name="android:textSize">@dimen/normal_text_small_size</item>
    </style>

    <style name="KC.TextAppearance.Accent.Light.BigText" parent="KC.TextAppearance.Accent.Light">
        <item name="android:textSize">@dimen/normal_text_big_size</item>
    </style>

</resources>
