<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="@color/menu_group_lightTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ha__list_selector">

    <TextView
        android:id="@+id/group_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:padding="@dimen/padding_medium"
        android:layout_weight="1"
        android:textAppearance="@style/KC.Light.NavDrawer.MenuItem" />

    <ImageView
        android:id="@+id/expandable_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        android:src="@drawable/ic_action_expand_light"
        android:background="@drawable/ha__list_selector"/>

    </LinearLayout>
</LinearLayout>
