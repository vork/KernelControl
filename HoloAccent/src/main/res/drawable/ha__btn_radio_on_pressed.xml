<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- Transparent rectanche to set the size of the drawable -->
    <item>
        <shape android:shape="rectangle" >
            <solid
        		android:color="@android:color/transparent" />
            <size
        		android:width="@dimen/ha__radio_size"
        		android:height="@dimen/ha__radio_size" />
        </shape>
    </item>
    
    <!-- Background colored fill -->
    <item android:drawable="@drawable/ha__circle_pressed"/>
    
    <!-- Outer ring -->
    <item>
        <shape
	        android:shape="ring"
	        android:innerRadius="@dimen/ha__radio_outer_ring_inner_radius"
	        android:thickness="@dimen/ha__radio_outer_ring_thickness"
	        android:useLevel="false">
            <solid android:color="#6fff" />
	    </shape>
    </item>
    
    <!-- inner background -->
    <item
        android:top="@dimen/ha__radio_center_margin"
        android:right="@dimen/ha__radio_center_margin"
        android:bottom="@dimen/ha__radio_center_margin"
        android:left="@dimen/ha__radio_center_margin">
        <shape android:shape="oval" >
            <solid android:color="#fff" />
        </shape>
    </item>
    
</layer-list>
