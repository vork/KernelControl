<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- background -->
    <item
        android:top="@dimen/ha__btn_default_margin"
        android:right="@dimen/ha__btn_default_margin"
        android:bottom="@dimen/ha__btn_default_margin"
        android:left="@dimen/ha__btn_default_margin">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/ha__btn_fill_corner_radius"/>
            <solid android:color="#22999999" />
        </shape>
    </item>
    
    <!-- border -->
    <item
        android:bottom="@dimen/ha__btn_default_margin"
        android:left="@dimen/ha__btn_default_margin"
        android:right="@dimen/ha__btn_default_margin"
        android:top="@dimen/ha__btn_default_margin">
        <shape android:shape="rectangle" >
			<solid android:color="#0000"/>
            <corners android:radius="@dimen/ha__btn_border_corner_radius"/>
            <stroke
                android:width="0.8dp"
                android:color="#44999999" />
        </shape>
    </item>
    
</layer-list>
